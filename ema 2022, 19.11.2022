#pragma once
#include "helper.h"
void RobotLine::radionica() {
  if (setup()) {
    armOpen();
  }
  static int broj = 0;
  char simbol[10 + sizeof(char)];

  if (broj == 2 and lineAny() and front() <125){
  stop();
  delayMs(500);
  go(-90, 90);
  delayMs(500);
  go(60, 60);
  delayMs(900);
  go(90, -90);
  delayMs(500);
  stop();
  delayMs(500);
  go(60, 60);
  delayMs(1650);
  go(90, -90);
  delayMs(500);
  go(60, 60);
  delayMs(900);


}
  else if (lineAny()) {
    if (line(0) and line(8)){
      go (60, 60);
      delayMs(500);
    }
    lineFollow();
  }
  else if (lineAny()){
    if (line(0) and line(8) and broj == 2){
      go(-60 ,-60);
      delayMs(100);
      go(-90, 90);
      delayMs(500);
      broj ++;
    }
  }

    else if (lineAny()){
    if (line(0) and line(8) and broj == 3){
      stop();
      end();
    }
  }





  else {





  if (front()<150 and not frontRight()>500){
    go (60,60);
    delayMs(350);
  }

  else if (front() < 120) {
      go(-90, 90);
      delayMs(500);
      broj++;
      stop();
      delayMs(500);
  }
      else if (front()<390 and frontLeft()<120 and frontRight() <120 and broj == 1){
        broj++;
        go(60,60);
        delayMs(500);
        go (-90, 90);
        delayMs(500);
        stop();
        delayMs(500);
        go(20, 20);
        delayMs(1000);
        stop();
        delayMs(100);
        go(-20, -20);
        delayMs(1000);
        stop();
        delayMs(100);
        stop();
        delayMs(500);
        go(-90, 90);
        delayMs(500);

      }

    // ZADATAK: Dodajte praćenje lijevog zida uz postojeće pračenje desnog zida.
    // HINT: Koristite grananje if uvjeta
    else if (rightFront() < leftFront()) {
      if (rightFront() < 120) {
        if (rightFront() > 100)
          go(70, 20);
        else
          go(20, 80);
      }
    }
    else if (leftFront() < 120) {
      if (leftFront() > 100)
        go(20, 70);
      else
        go(80, 20);
    }
    else
      go(50, 50);
  }

  // Ne mjenjati, služi za pretvorbu vrste varijable i ispis na 8x8 led
  sprintf(simbol, "%d", broj);
  display(simbol);
}
